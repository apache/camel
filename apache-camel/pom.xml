            <version>2.1</version>
            <executions>
              <execution>
                <id>unix-src</id>
                <phase>package</phase>
                <goals>
                  <goal>attached</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/descriptors/unix-src.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
