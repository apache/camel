<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
    ">

    <bean id="shutdown" class="org.apache.camel.impl.engine.DefaultShutdownStrategy">
        <!-- give it 30 sec to shutdown -->
        <property name="timeout" value="30"/>
    </bean>

    <!-- START SNIPPET: e1 -->
    <camelContext xmlns="http://camel.apache.org/schema/spring">
    <jmxAgent id="jmx" disabled="true"/>
        <!-- let this route complete all its pending messages when asked to shutdown -->
        <route id="foo" autoStartup="false" shutdownRunningTask="CompleteAllTasks">
            <from uri="file:{{testDirectory}}?initialDelay=0&amp;delay=10&amp;synchronous=true"/>
            <delay><constant>1000</constant></delay>
            <process ref="myProcessor"/>
            <to uri="mock:bar"/>
        </route>

    </camelContext>
    <!-- END SNIPPET: e1 -->

</beans>
