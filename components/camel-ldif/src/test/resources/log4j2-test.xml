<Configuration status="WARN">
	<Appenders>
		<Console name="stdout">
			<PatternLayout pattern="[%30.30t] %-30.30c{1} %-5p %m%n" />
		</Console>
		<File name="out" fileName="target/camel-ldif-test.log" bufferedIO="true" immediateFlush="true">
			<PatternLayout pattern="%d [%-15.15t] %-5p %-30.30c{1} - %m%n" />
		</File>
	</Appenders>
	
	<Loggers>
		<Logger name="org.springframework" level="warn">
		</Logger>
		
		<Logger name="org.apache.directory" level="warn">
		</Logger>
		
		<Logger name="org.apache.camel.component.ldif" level="trace" additivity="false">
			<AppenderRef ref="out"/>
		</Logger>
		
		<Root level="info">
			<AppenderRef ref="out" />
			<AppenderRef ref="stdout" />
		</Root>
	</Loggers>
</Configuration>
