                    javax.servlet;resolution:=optional,
                    javax.servlet.http;resolution:=optional,
                    javax.servlet.jsp;resolution:=optional,
                    javax.servlet.jsp.el;resolution:=optional,
                    javax.servlet.jsp.tagext;resolution:=optional,
