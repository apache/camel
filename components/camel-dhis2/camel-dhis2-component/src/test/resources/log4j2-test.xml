<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%30.30t] %-30.30c{1} %-5p %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.testcontainers" level="INFO" additivity="true"/>

        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>
