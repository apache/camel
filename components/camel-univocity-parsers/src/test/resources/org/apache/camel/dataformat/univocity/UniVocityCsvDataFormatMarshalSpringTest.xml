<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">
        <!-- Default writing of CSV -->
        <route>
            <from uri="direct:default"/>
            <marshal>
                <univocity-csv/>
            </marshal>
            <convertBodyTo type="String"/>
            <to uri="mock:result"/>
        </route>

        <!-- Write a CSV with specific headers -->
        <route>
            <from uri="direct:header"/>
            <marshal>
                <univocity-csv>
                    <univocity-header>A</univocity-header>
                    <univocity-header>C</univocity-header>
                </univocity-csv>
            </marshal>
            <convertBodyTo type="String"/>
            <to uri="mock:result"/>
        </route>

        <!-- Write a CSV with an advanced configuration -->
        <route>
            <from uri="direct:advanced"/>
            <marshal>
                <univocity-csv nullValue="N/A" emptyValue="empty" quote="_" quoteAllFields="true" quoteEscape="-"
                               delimiter=";"/>
            </marshal>
            <convertBodyTo type="String"/>
            <to uri="mock:result"/>
        </route>
    </camelContext>
</beans>