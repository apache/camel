{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/person.schema.json",
  "title": "Person",
  "description": "A person with name and age",
  "type": "object",
  "required": [ "name", "age" ],
  "properties": {
    "name": {
      "description": "The name of the person",
      "type": "string"
    },
    "age": {
      "description": "The age of the person",
      "type": "integer"
    }
  }
}
